#type: ignore
import adafruit_mpu6050 as imu
import time
import board
import pwmio

FREQ = 1000

motor1_f = pwmio.PWMOut(board.GP18, frequency=FREQ)
motor2_r = pwmio.PWMOut(board.GP17, frequency=FREQ)
motor3_r = pwmio.PWMOut(board.GP19, frequency=FREQ)
motor4_f = pwmio.PWMOut(board.GP20, frequency=FREQ)

def basic_operations():  # Drive forward at full throttle

     motor1_f.duty_cycle = 65535  #FRONT OF DRONE
     motor2_r.duty_cycle = 65535

     motor3_r.duty_cycle = 65535  #BACK OF DRONE
     motor4_f.duty_cycle = 65535
     
while True:
     basic_operations()